<Window x:Class="_02_Containers_Layout_Positions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Containers_Layout_Positions"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
        <StackPanel Orientation="Vertical">
            <Button HorizontalAlignment="Left">First Button</Button>
            <Button FontSize="20" HorizontalAlignment="Center">Second Button</Button>
            <Button Width="100" HorizontalAlignment="Right">Third Button</Button>
            <Button MaxHeight="200" HorizontalAlignment="Left">Fourth Button</Button>
            <Button Height="Auto" Width="200" HorizontalAlignment="Stretch">Fifth Button</Button>
            <Button Height="Auto">Sixth Button</Button>
            <Button Height="Auto">Seventh Button</Button>
        </StackPanel>
    
    </ScrollViewer>
   
</Window>
